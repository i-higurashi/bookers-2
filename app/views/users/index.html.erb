
<%= render "users/list", user: current_user %>

<%= render "books/list", book: @book %>


<div class="col-xs-9">
  <h2>Users</h2>
<table class="table table-hover table-inverse">
	<tr>
            <th>image</th>
		  <th>name</th>
        <th></th>

    </tr>
    <tbody>
<% @users.each do |user| %>

    <tr>
      <td>
         <%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:"30x30" %>
      </td>
      <td>
         <%= user.name %>
      </td>

      <td>
         <%= link_to "show", user_path(user.id), class: "user_#{user.id}" %>
      </td>
    </tr>

          <% end %>
      </tbody>
    </table>
