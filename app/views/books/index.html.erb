
<%= render 'users/list', user: current_user %>

<%= render 'books/list', book: @book %>


	<div class="col-xs-9">
  <h2>books</h2>
<table class="table table-hover table-inverse">
	<tr>
    <th>    </th>
		  <th>title</th>
        <th>opinion</th>

    </tr>
    <tbody>
<% @books.each do |book| %>

    <tr>
      <td>
         <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:"30x30" %>
      </td>
      <td>
      <%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>
      </td>

      <td>
      <%= book.opinion %>
      </td>
    </tr>

          <% end %>
      </tbody>
    </table>
